<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div ng-app="MyApp" class="full-content">
        <div class="my-header">
            <ul class="nav nav-tabs pull-right">
                <li><a href=@Url.Action("Index", "Home")>Home</a></li>
                <li><a href=@Url.Action("Index", "Student")>Students</a></li>
                <li><a href=@Url.Action("Index", "Teacher")>Teachers</a></li>
                <li><a href=@Url.Action("Index", "Course")>Courses</a></li>
                <li><a href=@Url.Action("Index", "Subject")>Subjects</a></li>
                <li><a href=@Url.Action("Index", "SubjectStudents")>Enrollments & Grades</a></li>
            </ul>
            <a class="home-link" href=@Url.Action("Index", "Home")>
                <p class="logo">
                    <img src="~/Content/Images/logo-magnifinance.svg" />
                    Technical Test
                </p>
            </a>

            
        </div>
        
        @RenderBody();

        <div class="my-footer">
            <p class="pull-right footer-text">Developed by <b>Bruno Silva</b></p>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
